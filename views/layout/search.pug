doctype html
html
  head
    title Restaurant Search
    style.
      .search-form {
        display: flex;
        justify-content: center;
        margin-top: 50px;
      }
      .search-input {
        padding: 15px 250px;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 20px;
      }
      .search-button {
        padding: 15px 25px;
        background-color:  lightblue;
        color: #000;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 20px;
      }
      .search-button:hover {
        background-color: darkblue;
        color: #fff;
      }
      table {
        width: 80%;
        border-collapse: collapse;
        background-color: lightgray;
        margin: 50px auto;
      }
      th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        font-size: 14pt;
        color:black;
      }
      th {
        background-color: darkblue;
        color: #fff;
        padding: 15px;
      }
      img {
        height: 70%;
        width: 70%;
      }
      body{
        background-color: white;
      }
      .highlighted {
        background-color: rgb(140, 255, 0);
      }
  body
    form(action="/searched" method="POST" class="search-form")
      input(type="text" name="keyword" placeholder="Search Restaurant Address" class="search-input")
      button(type="submit" class="search-button") Search
